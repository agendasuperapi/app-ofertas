<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Não reescreve se for arquivo ou pasta real
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Se for bot de rede social, redireciona para share.php
  RewriteCond %{HTTP_USER_AGENT} facebookexternalhit|WhatsApp|Twitterbot|Slackbot|LinkedInBot [NC]
  RewriteRule ^([a-zA-Z0-9_-]+)$ share.php?username=$1 [QSA,L]

  # Todo o resto vai para Flutter (inclui usuários reais)
  RewriteRule ^.*$ /index.html [L]
</IfModule>
